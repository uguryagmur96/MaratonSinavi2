package uguryagmur;

public class CustomString {
	
	private String word;

	public CustomString() {
		
		this.word = "BoostMaratonSinavi";
	}
	
	public int uzunluk() {
		int toplam=this.word.length();
		
		return toplam;
	}
	
	public char belirtilenSiradakikiKarakteriDon(int index) {
		char letter=this.word.charAt(index);
		
		return letter;
	}
	
	public int belirtilenKarakterinIlkNeredeGectiginiBul(String word) {
		
		int n=this.word.indexOf(word);
		
		return n;
		
	}
	
	
	
	
	
	
	

}
